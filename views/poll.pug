extends layout.pug


block main_content
  .card
    .card__title
      h2.h2
        span(data-poll-id= poll._id.toString())= poll.question
      
    .card__body
      each option in poll.options
        .option-box #[input(type='radio', name='option', value= option.option).form__radio] #{option.option}

      input.form__submit.vote-btn(type='button', value='Vote')