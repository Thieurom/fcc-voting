extends layout.pug


block main_content
  .card
    .card__title
      h2.h2 Create new account
      
    .card__body
      form.form(method='POST', action='/signup')
        label.form__label(for='username') Username
        input#username.form__input(type='text', name='username', required)

        label.form__label(for='password') Password
        input#password.form__input(type='password', name='password', required)

        input.form__submit(type='submit', value='Submit')